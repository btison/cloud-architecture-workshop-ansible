apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_cloud_architecture_workshop_keycloak_application_name }}
  namespace: {{ ocp4_workload_cloud_architecture_workshop_keycloak_application_namespace }}
  finalizers:
  - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    name: ""
    namespace: {{ ocp4_workload_cloud_architecture_workshop_keycloak_namespace }}
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
  source:
    repoURL: {{ ocp4_workload_cloud_architecture_workshop_keycloak_gitops_repo }}
    targetRevision: {{ ocp4_workload_cloud_architecture_workshop_keycloak_gitops_repo_tag }}
    path: {{ ocp4_workload_cloud_architecture_workshop_keycloak_gitops_repo_path }}
    helm:
      values: |
        keycloak:
          nameOverride: {{ ocp4_workload_cloud_architecture_workshop_keycloak_custom_resource_name }}
          route:
            host: {{ ocp4_workload_cloud_architecture_workshop_keycloak_host }}.{{ r_openshift_subdomain }}
