---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: minio-pvc
  namespace: '{{ ocp4_workload_cloud_architecture_workshop_threescale_namespace }}'
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: {{ ocp4_workload_cloud_architecture_workshop_threescale_minio_storageclass }}
  volumeMode: Filesystem
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: minio
  namespace: '{{ ocp4_workload_cloud_architecture_workshop_threescale_namespace }}'
spec:
  replicas: 1
  selector:
    matchLabels:
      app: minio
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: minio
    spec:
      # Refer to the PVC created earlier
      volumes:
      - name: storage
        persistentVolumeClaim:
          # Name of the PVC created earlier
          claimName: minio-pvc
      containers:
      - name: minio
        # Pulls the default Minio image from Docker Hub
        image: minio/minio:RELEASE.2020-12-29T23-29-29Z
        args:
        - server
        - /storage
        env:
        # Minio access key and secret key
        - name: MINIO_ACCESS_KEY
          value: "{{ ocp4_workload_cloud_architecture_workshop_threescale_minio_access_key_id }}"
        - name: MINIO_SECRET_KEY
          value: "{{ ocp4_workload_cloud_architecture_workshop_threescale_minio_secret_access_key }}"
        - name: MINIO_REGION_NAME
          value: "{{ ocp4_workload_cloud_architecture_workshop_threescale_minio_default_region }}"
        ports:
        - containerPort: 9000
        volumeMounts:
        - name: storage # must match the volume name, above
          mountPath: "/storage"
---
apiVersion: v1
kind: Service
metadata:
  name: minio
  namespace: '{{ ocp4_workload_cloud_architecture_workshop_threescale_namespace }}'
spec:
  ports:
  - port: 9000
    protocol: TCP
    targetPort: 9000
  selector:
    app: minio
  sessionAffinity: None
  type: ClusterIP

---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: minio
  namespace: '{{ ocp4_workload_cloud_architecture_workshop_threescale_namespace }}'
spec:
  port:
    targetPort: 9000
  to:
    kind: Service
    name: minio
    weight: 100
  wildcardPolicy: None
