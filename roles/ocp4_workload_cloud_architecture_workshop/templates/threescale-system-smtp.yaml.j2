kind: Secret
apiVersion: v1
metadata:
  name: system-smtp
  labels:
    app: 3scale-api-management
    threescale_component: system
    threescale_component_element: smtp
type: Opaque    
stringData:
  address: "{{ ocp4_workload_cloud_architecture_workshop_threescale_smtp_host }}"
  authentication: "{{ ocp4_workload_cloud_architecture_workshop_threescale_smtp_authentication }}"
  domain: "{{ ocp4_workload_cloud_architecture_workshop_threescale_smtp_domain}}"
  openssl.verify.mode: 'false'
  password: "{{ ocp4_workload_cloud_architecture_workshop_threescale_smtp_passwd }}"
  port: "{{ ocp4_workload_cloud_architecture_workshop_threescale_smtp_port }}"
  username: "{{ ocp4_workload_cloud_architecture_workshop_threescale_smtp_userid }}"
