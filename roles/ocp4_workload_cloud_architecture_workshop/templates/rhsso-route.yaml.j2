---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: {{ ocp4_workload_cloud_architecture_workshop_rhsso_route }}
  labels:
    app: sso
spec:
  host: {{ ocp4_workload_cloud_architecture_workshop_rhsso_host }}.{{ r_openshift_subdomain }} 
  to:
    kind: Service
    name: keycloak
    weight: 100
  port:
    targetPort: keycloak
  tls:
    termination: reencrypt
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None
